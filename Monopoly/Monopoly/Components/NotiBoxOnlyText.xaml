<UserControl x:Class="Monopoly.Components.NotiBoxOnlyText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Monopoly.Components"
             xmlns:component="clr-namespace:Monopoly.Components"
             xmlns:layout="clr-namespace:Monopoly.Layouts"
             mc:Ignorable="d" 
             d:DesignHeight="116" d:DesignWidth="500">
    <layout:NotiBoxFrame ColorFrame="{Binding Color}">
        <TextBlock Text="{Binding Text}"
                   Style="{StaticResource NotiText}"
                   x:Name="notiText"/>
    </layout:NotiBoxFrame>
</UserControl>
