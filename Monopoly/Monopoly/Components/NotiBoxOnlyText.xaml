<UserControl x:Class="Monopoly.Components.NotiBoxOnlyText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Monopoly.Components"
             xmlns:component="clr-namespace:Monopoly.Components"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="116" d:DesignWidth="500">
    <component:NotiBoxFrame ColorFrame="{Binding Color}">
        <TextBlock Text="{Binding Text}"
                   Style="{StaticResource NotiText}"/>
    </component:NotiBoxFrame>
</UserControl>
