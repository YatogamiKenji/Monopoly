<UserControl x:Class="Monopoly.Components.SideBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Monopoly.Components"
             xmlns:component="clr-namespace:Monopoly.Components"
             x:Name="root"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="350">
    <Grid Background="#c4c4c4" Width="350" Height="650">
        <Grid  Margin="12 12 12 12">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Group Tab-->
            <Grid Grid.Row="0">
                <component:TabSideBarGroup SelectedId="{Binding SelectedId, ElementName=root, Mode=TwoWay}"
                                           Players="{Binding Players, ElementName=root}"/>
            </Grid>

            
            
            <!-- Group Content -->
            <Grid Grid.Row="1">
                <component:ContentSideBarGroup SelectedId="{Binding SelectedId, ElementName=root}"/>
            </Grid>

        </Grid>
    </Grid>
    
</UserControl>
