<UserControl x:Class="Monopoly.Components.endGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Monopoly.Components"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="850">
    <UserControl.Resources>
        <Storyboard x:Key="OpenMenu">
            <DoubleAnimation BeginTime="0:0:0" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1"/>
        </Storyboard>
    </UserControl.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/background/bg_endgame.jpg"/>
        </Grid.Background>

        <Image Source="/Images/panel/panel_endgame.jpg" Opacity="0.6" Grid.Column="1" Margin="10" Width="200" Stretch="Uniform"/>


        <Image Source="/Images/rank/camp.png" Grid.Column="1" Height="180" Margin="0 0 0 200" x:Name="champrank"/>


        <TextBlock x:Name="playerName" Width="180" Height="50" Grid.Column="1" Margin="10,405,10,45"/>



    </Grid>
</UserControl>
