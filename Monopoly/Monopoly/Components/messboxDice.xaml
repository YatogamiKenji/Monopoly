<UserControl x:Class="Monopoly.Components.messboxDice"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Monopoly.Components"
             x:Name="root"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="#C4C4C4">
        <TextBlock Text="BẠN QUAY ĐƯỢC"
                   FontSize="25"
                   FontWeight="Medium"
                   HorizontalAlignment="Center"
                   Background="Bisque"
                   Height="50"
                   Width="300"
                   TextAlignment="Center"
                   VerticalAlignment="Top"
                   Padding="0 7 0 0"/>
        <TextBlock x:Name="dice"
                 FontSize="150"
                 FontWeight="Heavy"
                 Text="{Binding Title, ElementName=root}"
                 Foreground="#C95B5B"
                 Background="Transparent"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 />
    </Grid>
</UserControl>
