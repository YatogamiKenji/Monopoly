<UserControl x:Class="Monopoly.Components.PlayerShow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Monopoly.Components"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="20" d:DesignWidth="20">
   
        
        <Canvas x:Name="NenCanVas" Width="20" Height="20" Background="{Binding BackgroundPlayer, ElementName=root}">
        <Image Height="25" Width="25" Source="{Binding BackgroundPlayer, ElementName=root}" Stretch="UniformToFill"></Image>

        <TextBlock Text="{Binding Title, ElementName=root}" 
                       Canvas.Left="6" 
                       Canvas.Top="2"
                       FontWeight="Heavy"
                      />
    </Canvas>
   
</UserControl>
