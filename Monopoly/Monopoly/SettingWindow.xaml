<Window x:Class="Monopoly.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monopoly"
        mc:Ignorable="d"
        Title="SettingWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition>
            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <TextBlock Text="Music"
                       FontSize="20"/>
            <Slider x:Name="MusicSlider" Margin="20" Maximum="100" Cursor="Hand" SmallChange="1" TickPlacement="Both" TickFrequency="5"
                    Background="DarkBlue" LargeChange="10" ValueChanged="MusicSlider_ValueChanged"/>
            <TextBlock Text="Sound Effect"
                       FontSize="20"/>
            <Slider x:Name="SoundEffectSlider" Margin="20" Maximum="100" Cursor="Hand" SmallChange="1" TickPlacement="Both" TickFrequency="5"
                    Background="DarkBlue" LargeChange="10" ValueChanged="SoundEffectSlider_ValueChanged"/>
            <Button x:Name="Close" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="50" Width="50" Margin="20 150" Click="Close_Click"> Close
            </Button>
        </StackPanel>
        
    </Grid>
</Window>
