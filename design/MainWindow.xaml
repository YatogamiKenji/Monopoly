                        <Border Background="Red" CornerRadius="10">
                            <TextBlock Text="Home , hotel" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center">

                            </TextBlock>
                        </Border>
                    </Grid>






                </Grid>

            </Border>

